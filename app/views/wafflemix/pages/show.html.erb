<p id="notice"><%= notice %></p>

<h1><span id="page_title" class="mercury-region" data-mercury="full"><%= raw @page.title %></span></h1>
<div id="page_body" class="mercury-region" data-mercury="full">
  <%= raw @page.content_parts.content_for('Body') %>
</div>
<p><%= link_to "Edit Page", "/editor" + request.path, id: "edit_link", data: {save_url: mercury_update_page_path(@page.id)} %></p>

<% if current_user %>
  <%= link_to 'Edit', edit_admin_page_path(@page) %> |
  <%= link_to 'Back', pages_path %>
<% end %>
