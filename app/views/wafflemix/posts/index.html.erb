<h1>Listing posts</h1>

<table>
  <tr>
    <th>Published at</th>
    <th>Link url</th>
    <th>Draft</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.published_at %></td>
    <td><%= post.link_url %></td>
    <td><%= post.draft %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

