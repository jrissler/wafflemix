<%= semantic_form_for [:admin, @contact_form] do |f| %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :subject %>
    <%= f.input :message %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= link_to 'Cancel', admin_contact_forms_path, :class => 'btn' %>
  <% end %>

<% end %>
