<%= semantic_form_for [:admin, @post] do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs :name => "Basic" do %>
    <%= f.input :title %>
    <%= f.semantic_fields_for :meta_content do |meta_content| %>
      <%= meta_content.inputs :meta_title, :meta_keywords, :meta_description %>
    <% end %>
  <% end %>

  <%= f.inputs :name => "Categories & Tags" do %>
    <%= f.input :categories, :as => :check_boxes, :collection => ::Wafflemix::Category.all %>
    <%= f.input :tag_list %>
  <% end %>

  <%= f.inputs :name => "Advanced" do %>
    <%= f.input :link_url %>
    <%= f.input :published_at, :as => :string %>
    <%= f.input :draft %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= link_to 'Cancel', admin_posts_path, :class => 'btn' %>
  <% end %>

<% end %>

<% content_for :custom_js do %>
  <script>
    $(document).ready(function() {
      $('#post_published_at').datepicker();
    });
  </script>
<% end %>