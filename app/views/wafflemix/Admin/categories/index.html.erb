<h1>Listing categories</h1>

<table>
  <tr>
    <th>Categorical</th>
    <th>Name</th>
    <th>Position</th>
    <th>Ancestry</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.categorical %></td>
    <td><%= category.name %></td>
    <td><%= category.position %></td>
    <td><%= category.ancestry %></td>
    <td><%= link_to 'Show', [:admin, category] %></td>
    <td><%= link_to 'Edit', [:edit, :admin, category] %></td>
    <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

