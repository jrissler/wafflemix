      <th>Name</th>
      <th>Actions</th>
    </tr>

    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <%= link_to 'Edit', [:edit, :admin, role], :class => 'btn btn-primary btn-small' %>
          <%= link_to 'Destroy', [:admin, role], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

